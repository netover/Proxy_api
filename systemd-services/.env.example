# Environment variables for LLM Proxy services

# Context Service Configuration
CACHE_SIZE=1000
CACHE_TTL=3600
CACHE_PERSIST=false
ADAPTIVE_ENABLED=true
ADAPTIVE_FACTOR=0.5
MAX_TOKENS_DEFAULT=512
TRUNCATION_THRESHOLD=10000
PARALLEL_PROVIDERS=1
ERROR_PATTERNS=context.*exceeded,token.*limit
FALLBACK_STRATEGIES=truncate,secondary_provider

# Health Worker Configuration
HEALTH_CHECK_INTERVAL=60

# Main Proxy Configuration
CONTEXT_SERVICE_URL=http://localhost:8001
HEALTH_WORKER_URL=http://localhost:8002
HOST=0.0.0.0
PORT=8000

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO