[run]
source = src
omit =
    */tests/*
    */test_*
    */conftest.py
    */__init__.py
    src/core/chaos/monkey.py  # Chaos engineering is optional
    src/core/cache/redis_cache.py  # Redis cache is optional

[report]
exclude_lines =
    pragma: no cover
    def __repr__
    if self.debug:
    if settings.DEBUG
    raise AssertionError
    raise NotImplementedError
    if 0:
    if __name__ == .__main__.:

[html]
directory = htmlcov

[xml]
output = coverage.xml
