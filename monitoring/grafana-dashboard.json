{
  "dashboard": {
    "id": null,
    "title": "LLM Proxy Services Dashboard",
    "tags": ["llm-proxy", "microservices"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Service Health Status",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=~\"llm-proxy|context-service|health-worker\"}",
            "legendFormat": "{{job}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "options": {
                  "0": {
                    "text": "DOWN",
                    "color": "red"
                  },
                  "1": {
                    "text": "UP",
                    "color": "green"
                  }
                },
                "type": "value"
              }
            ]
          }
        }
      },
      {
        "id": 2,
        "title": "HTTP Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(proxy_api_requests_total{job=\"llm-proxy\"}[5m])",
            "legendFormat": "Total Requests"
          },
          {
            "expr": "rate(proxy_api_requests_successful_total{job=\"llm-proxy\"}[5m])",
            "legendFormat": "Successful Requests"
          },
          {
            "expr": "rate(proxy_api_requests_failed_total{job=\"llm-proxy\"}[5m])",
            "legendFormat": "Failed Requests"
          }
        ]
      },
      {
        "id": 3,
        "title": "Response Time",
        "type": "graph",
        "targets": [
          {
            "expr": "proxy_api_response_time_avg{job=\"llm-proxy\"}",
            "legendFormat": "Average Response Time"
          },
          {
            "expr": "proxy_api_model_response_time_avg{job=\"llm-proxy\"}",
            "legendFormat": "{{model}} Response Time"
          }
        ]
      },
      {
        "id": 4,
        "title": "Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "process_resident_memory_bytes{job=~\"llm-proxy|context-service|health-worker\"} / 1024 / 1024",
            "legendFormat": "{{job}} - Memory (MB)"
          }
        ]
      },
      {
        "id": 5,
        "title": "CPU Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(process_cpu_user_seconds_total{job=~\"llm-proxy|context-service|health-worker\"}[5m]) * 100",
            "legendFormat": "{{job}} - CPU %"
          }
        ]
      },
      {
        "id": 6,
        "title": "Context Condensation Cache",
        "type": "graph",
        "targets": [
          {
            "expr": "proxy_api_cache_entries_total{job=\"llm-proxy\"}",
            "legendFormat": "Cache entries"
          },
          {
            "expr": "proxy_api_cache_hit_rate{job=\"llm-proxy\"}",
            "legendFormat": "Hit rate %"
          },
          {
            "expr": "proxy_api_cache_memory_usage_mb{job=\"llm-proxy\"}",
            "legendFormat": "Memory usage (MB)"
          }
        ]
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
}